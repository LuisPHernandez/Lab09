{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build CUDA Interactive (nvcc + curl)",
      "type": "shell",
      "command": "nvcc",
      "args": [
        "-O3",
        "-std=c++17",
        "main.cu",
        "-o",
        "chatbox_cuda.exe",
        "-lcurl"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Run chatbox_cuda Interactive",
      "type": "shell",
      "command": "${workspaceFolder}\\chatbox_cuda.exe",
      "dependsOn": "Build CUDA Interactive (nvcc + curl)",
      "problemMatcher": []
    }
  ]
}